{
    "$schema": "https://unpkg.com/@camunda/zeebe-element-templates-json-schema/resources/schema.json",
    "name": "Scoring Connector",
    "id": "io.camunda.scoring.connector",
    "version": 1,
    "description": "Connects to Scoring API and performs CRUD operations",
    "icon": {
        "contents": "data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHZpZXdCb3g9IjAgMCAxMDAgMTAwIj48Y2lyY2xlIGN4PSI1MCIgY3k9IjUwIiByPSI1MCIgZmlsbD0iIzQ0NTU2NiIvPjwvc3ZnPg=="
    },
    "category": {
        "id": "connectors",
        "name": "Connectors"
    },
    "appliesTo": [
        "bpmn:Task"
    ],
    "elementType": {
        "value": "bpmn:ServiceTask",
        "binding": {
            "type": "zeebe:taskDefinition",
            "name": "type"
        }
    },
    "groups": [
        {
            "id": "authentication",
            "label": "Authentication"
        },
        {
            "id": "request",
            "label": "Request Details"
        },
        {
            "id": "payload",
            "label": "Payload"
        }
    ],
    "properties": [
        {
            "label": "Type",
            "type": "Hidden",
            "value": "io.camunda:scoring-connector:1",
            "binding": {
                "type": "zeebe:taskDefinition",
                "property": "type"
            }
        },
        {
            "label": "URL",
            "description": "The URL to call",
            "group": "request",
            "type": "String",
            "feel": "optional",
            "binding": {
                "type": "zeebe:input",
                "name": "url"
            },
            "constraints": {
                "notEmpty": true
            }
        },
        {
            "label": "Method",
            "description": "HTTP Method",
            "group": "request",
            "type": "Dropdown",
            "value": "POST",
            "choices": [
                {
                    "name": "GET",
                    "value": "GET"
                },
                {
                    "name": "POST",
                    "value": "POST"
                },
                {
                    "name": "PUT",
                    "value": "PUT"
                },
                {
                    "name": "DELETE",
                    "value": "DELETE"
                },
                {
                    "name": "SCORING",
                    "value": "SCORING"
                }
            ],
            "binding": {
                "type": "zeebe:input",
                "name": "method"
            }
        },
        {
            "label": "Authentication",
            "description": "Authentication header value (e.g. 'Bearer ...')",
            "group": "authentication",
            "type": "String",
            "optional": true,
            "binding": {
                "type": "zeebe:input",
                "name": "authentication"
            }
        },
        {
            "label": "Payload",
            "description": "JSON Payload",
            "group": "payload",
            "type": "Text",
            "optional": true,
            "binding": {
                "type": "zeebe:input",
                "name": "payload"
            },
            "feel": "optional"
        },
        {
            "label": "Headers",
            "description": "Custom Headers",
            "group": "request",
            "type": "String",
            "optional": true,
            "binding": {
                "type": "zeebe:input",
                "name": "headers"
            },
            "feel": "required"
        },
        {
            "label": "Result Variable",
            "description": "Name of variable to store the result in",
            "type": "String",
            "binding": {
                "type": "zeebe:taskHeader",
                "key": "resultVariable"
            }
        }
    ]
}